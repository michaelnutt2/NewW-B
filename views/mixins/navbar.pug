mixin navbar(tag_list, name, user)
  //- style
  //-   include ../../public/stylesheets/stylesheet.css

  nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
    a(class="navbar-brand" href="#") NewW-B
    button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation")
      span(class="navbar-toggler-icon")
    div(class="collapse navbar-collapse" id="navbarColor03")
      ul(class="navbar-nav mr-auto")
        li(class="nav-item")
          a(href="/" class=(name==="/" ? "nav-link active" : "nav-link")) Home
        each tag in tag_list
          //- - console.log(tag)
          li(class="nav-item") 
            a(href=tag.url class=(name===tag.tag ? "nav-link active" : "nav-link")) #{tag.tag}
      if user == undefined
        - console.log('Loggged Out')
        form(action='/article' class='form-inline' method="post")
          div(class="form-group" style='margin-right:10px;')
            label(for="username")
            input(type="text" class="form-control" name="username" placeholder="username" autocomplete="username" required)
          div(class="form-group")
            label(for="passwords")
            input(type="password" class="form-control" name="password" placeholder="password" autocomplete="current-password" required)
            input(type = 'submit', style='display:none')
        ul(class="navbar-nav")
          li(class="nav-item") 
              a(href="/create_account" class=(name==="/create_account" ? "nav-link active" : "nav-link")) Create Account
      else
        - console.log('Loggged In')
        ul(class="navbar-nav")
          li(class="nav-item")
            //- - console.log("Navbar Print");
            //- - console.log(user);
            a(href="/user" class=(name==="/" ? "nav-link active" : "nav-link"), placeholder=user)='Hello ' + user.f_name



