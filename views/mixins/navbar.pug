mixin navbar(tag_list, name)
  style.
    .form-inline {  
      display: flex;
      flex-flow: row wrap;
      align-items: center;
    }

    .form-inline label {
      margin: 5px 10px 5px 0;
    }

    .form-inline input {
      vertical-align: middle;
      margin: 5px 10px 5px 0;
      padding: 10px;
    }

    @media (max-width: 800px) {
      .form-inline input {
        margin: 10px 0;
      }
      
      .form-inline {
        flex-direction: column;
        align-items: stretch;
      }
    }

  nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
    a(class="navbar-brand" href="#") NewW-B
    button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation")
      span(class="navbar-toggler-icon")
    div(class="collapse navbar-collapse" id="navbarColor03")
      ul(class="navbar-nav mr-auto")
        li(class="nav-item")
          a(href="/" class=(name==="/" ? "nav-link active" : "nav-link")) Home
        each tag in tag_list
          li(class="nav-item") 
            a(href=tag.url class=(name===tag.tag ? "nav-link active" : "nav-link")) #{tag.tag}
    script.
      function setUsername() {
          return document.cookie.split('=')[1]
      };
      var user = setUsername()
      console.log(user);
    - var user = username.username
      if user == undefined
        console.log('Loggged Out')
        form(action='/' class='form-inline' method="post")
          div(class="form-group" style='margin-right:10px;')
            label(for="username")
            input#name.form-control(type="text" class="form-control" name="username" placeholder="username" required value=(undefined === user ? '' : user.name))
          div(class="form-group")
            label(for="passwords")
            input(type="password" class="form-control" name="password" placeholder="password" required)
            input(type = 'submit', style='display:none')
      else
        console.log('Loggged In')
        ul(class="navbar-nav mr-auto")
          li(class="nav-item")
            a(href="/user" class=(name==="/" ? "nav-link active" : "nav-link"), placeholder=user)='Hello' + user
