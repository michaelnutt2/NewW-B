mixin sidebar(keys)
    //- style
    //-     include ../../public/stylesheets/stylesheet.css
    div(id="sidebar" class="sidebar")
        a(href="javascript:void(0)" class="closebtn" onclick="closeNav()") x
        p Keywords
        - var i = 0;
        //- while i < 10
        //-     script. 
        //-         var key = keys[i];
        //-         var key_url = "/articles/keywords/" + key;
            //- a(href=key_url)= key
        each key in keys
            - var key_url = "/articles/keywords/" + key
            a(href=key_url)= key
        else
            p No Keywords

    div(id="main")
        button(id="btn" class="openbtn" onclick="openNav()") &#9776;

    script. 
        function openNav() {
            document.getElementById("sidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("sidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }