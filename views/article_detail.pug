extends layout
include mixins/navbar 
include mixins/cards 
include mixins/sidebar
include mixins/comments
include mixins/comment_form

block content
    +navbar(tag_list, name, user)
    +sidebar(sidebar)
    style.
        img{
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
        }
        .caption {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
            text-align: center;
        }
    div(class="main article")
        p !{article_text}
    if(user)
        +comment_form
    +comments(comments, users)